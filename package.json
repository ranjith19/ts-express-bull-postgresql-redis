{
  "name": "nodejs-restapi-mongo-ts",
  "version": "1.0.0",
  "description": "Example Project on how to build and develop REST API with NodeJS and MongoDB",
  "main": "index.js",
  "scripts": {
    "api": "ts-node api.ts",
    "worker": "ts-node worker.ts",
    "dev": "./node_modules/nodemon/bin/nodemon.js --config server-nodemon.json | pino-pretty",
    "devworker": "./node_modules/nodemon/bin/nodemon.js --config worker-nodemon.json | pino-pretty",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typeorm": "typeorm-ts-node-commonjs",
    "db:generate": "typeorm-ts-node-commonjs  migration:generate -d db/data-source.ts",
    "db:upgrade": "typeorm-ts-node-commonjs migration:run -d db/data-source.ts",
    "db:downgrade": "typeorm-ts-node-commonjs migration:revert -d db/data-source.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbachi/nodejs-restapi-mongo-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bbachi/nodejs-restapi-mongo-ts/issues"
  },
  "homepage": "https://github.com/bbachi/nodejs-restapi-mongo-ts#readme",
  "dependencies": {
    "bull": "^4.10.1",
    "express": "^4.18.2",
    "pg": "^8.8.0",
    "pino": "^8.7.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.10",
    "xid-js": "^1.0.1"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@types/pino": "^7.0.5",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.3",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
